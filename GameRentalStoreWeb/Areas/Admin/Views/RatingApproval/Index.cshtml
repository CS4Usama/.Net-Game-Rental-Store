@model List<GameRating>

@{
    ViewData["Title"] = "Ratings Approval";
}



<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">User's Game Rating Approval List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <table id="ratingApproval" class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>User Name</th>
                    <th>User Email</th>
                    <th>Game Name</th>
                    <th>Reviews</th>
                    <th class="text-center">Ratings</th>
                    <th class="text-center">Status</th>
                </tr>
            </thead>
        </table>
    </div>
</div>


@section Scripts {
    <script src="~/js/ratingApproval.js"></script>
}
