@model Game


<div class="card shadow border-0 mt-4">
	<div class="card-header bg-secondary bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">Delete Game</h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4 my-4">
		<form method="post">
			@* <input asp-for="Id" hidden /> *@
			<div class="border p-3 mt-4">
				<div class="form-floating py-2 col-12">
					<input asp-for="Title" disabled class="form-control border-0 shadow" />
					<label asp-for="Title" class="ms-2"></label>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="Description" disabled class="form-control border-0 shadow" />
					<label asp-for="Description" class="ms-2"></label>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="Platform" disabled class="form-control border-0 shadow" />
					<label asp-for="Platform" class="ms-2"></label>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="Genre" disabled class="form-control border-0 shadow" />
					<label asp-for="Genre" class="ms-2"></label>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="ReleaseDate" disabled class="form-control border-0 shadow" />
					<label asp-for="ReleaseDate" class="ms-2"></label>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="Rating" disabled class="form-control border-0 shadow" />
					<label asp-for="Rating" class="ms-2"></label>
				</div>

				<div class="row mt-3">
					<div class="col-6 col-md-3">
						<button type="submit" class="btn btn-danger form-control">Delete</button>
					</div>
					<div class="col-6 col-md-3">
						<a asp-controller="Game" asp-action="Index" class="btn btn-outline-secondary border form-control">
							Back to List
						</a>
					</div>
				</div>
			</div>
		</form>
	</div>
</div>

